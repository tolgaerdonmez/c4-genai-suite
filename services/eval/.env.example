# PostgreSQL Configuration (use C4's database)
PG_HOST=localhost
PG_USER=admin
PG_PASSWORD=secret
PG_DB=cccc
PG_PORT=5432
PG_SCHEMA=llm_eval

# Celery / RabbitMQ
CELERY_BROKER_HOST=localhost
CELERY_BROKER_USER=rabbit
CELERY_BROKER_PASSWORD=rabbit

# Encryption key for sensitive data (generate with: openssl rand -base64 32)
LLM_EVAL_ENCRYPTION_KEY=

# Azure OpenAI (required for RAGAS QA generation)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Evaluation settings
EVALUATION_MAX_RETRIES=10
EVALUATION_RUN_ASYNC=True
EVALUATION_PARALLEL_TEST_CASES=1

# RAGAS settings
RAGAS_PARALLEL_GENERATION_LIMIT=5

# DeepEval settings
DEEPEVAL_MAX_RETRIES=3

# File Store settings (for accessing C4 bucket files)
# Must match REIS configuration to access the same S3/MinIO storage
FILE_STORE_TYPE=s3
FILE_STORE_S3_ENDPOINT_URL=http://localhost:9000
FILE_STORE_S3_ACCESS_KEY_ID=admin
FILE_STORE_S3_SECRET_ACCESS_KEY=secretsecret
FILE_STORE_S3_BUCKET_NAME=mybucket
FILE_STORE_S3_REGION_NAME=
